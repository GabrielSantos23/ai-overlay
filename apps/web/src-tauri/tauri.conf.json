{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Bangg",
  "version": "0.1.5",
  "identifier": "com.gabs.bangg",

  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3001",
    "beforeDevCommand": "bun dev",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "windows": [
      {
        "title": "AI Overlay",
        "width": 500,
        "height": 150,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "resizable": false,
        "visibleOnAllWorkspaces": true,
        "skipTaskbar": true,
        "visible": true,
        "center": false,
        "contentProtected": true,
        "focus": false,
        "acceptFirstMouse": true,
        "shadow": false
      },
      {
        "label": "main-window",
        "title": "Main Window",
        "width": 1200,
        "height": 800,
        "minHeight": 800,
        "minWidth": 1000,
        "resizable": true,
        "visible": true,
        "center": true,
        "url": "/main",
        "decorations": false,
        "devtools": true
      }
    ],
    "security": {
      "csp": "null",

      "capabilities": ["default", "main-capability"]
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,

    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://updater.bangg.xyz/{{target}}/{{arch}}/{{current_version}}"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IENCMkMzQjJGRUQ4REE2RjAKUldUd3BvM3RMenNzeTJIWHNFSDdqcWVyT3FmejhVY3l4YTYwekxjT0VYeWdvTEFlT09LUEZrbnQK"
    },
    "deep-link": {
      "desktop": {
        "schemes": ["Bangg"]
      }
    }
  }
}
